/* transaction-form.wxss */
.form-header {
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.radio-label text {
  margin-left: 8rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background-color: white;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background-color: white;
  box-sizing: border-box;
}

.picker {
  position: relative;
}

.picker-value {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background-color: white;
  box-sizing: border-box;
  position: relative;
}

.picker-value::after {
  content: '';
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid var(--text-color-tertiary);
  border-bottom: 2rpx solid var(--text-color-tertiary);
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}

.placeholder {
  color: var(--text-color-tertiary);
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.form-actions .btn {
  width: 48%;
}

.delete-container {
  margin-top: 80rpx;
  padding-top: 40rpx;
  border-top: 2rpx solid var(--border-color);
}

.btn-delete {
  background-color: transparent;
  color: var(--error-color);
  border: 2rpx solid var(--error-color);
  width: 100%;
}
