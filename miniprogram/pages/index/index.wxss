/* index.wxss */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-color);
}

.welcome-card {
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, var(--primary-light), #ffffff);
  border-left: 8rpx solid var(--primary-color);
}

.welcome-header {
  margin-bottom: 16rpx;
}

.welcome-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color);
}

.welcome-body {
  display: flex;
  flex-direction: column;
}

.welcome-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 8rpx;
}

.welcome-subtext {
  font-size: 24rpx;
  color: var(--text-color-tertiary);
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.feature-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  transition: transform 0.2s;
}

.feature-card:active {
  transform: scale(0.98);
}

.feature-icon {
  margin-bottom: 20rpx;
}

.icon-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon-text {
  font-size: 40rpx;
  font-weight: 600;
  color: white;
}

.transactions-icon {
  background-color: var(--primary-color);
}

.city-icon {
  background-color: var(--success-color);
}

.summary-icon {
  background-color: var(--warning-color);
}

.feature-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.feature-description {
  font-size: 24rpx;
  color: var(--text-color-tertiary);
  text-align: center;
}

.quick-actions {
  margin-top: 20rpx;
}

.quick-actions .btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
}
