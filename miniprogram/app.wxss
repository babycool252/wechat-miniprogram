/**app.wxss**/
page {
  --primary-color: #4a6bff;
  --primary-light: #e6ebff;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
  --text-color: #333333;
  --text-color-secondary: #666666;
  --text-color-tertiary: #999999;
  --border-color: #e8e8e8;
  --background-color: #f5f5f5;
  --card-background: #ffffff;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--background-color);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* Premium UI Elements */
.card {
  background-color: var(--card-background);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-color);
}

.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: var(--text-color-secondary);
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background-color: white;
  transition: all 0.3s;
}

.input:focus {
  border-color: var(--primary-color);
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: var(--text-color-secondary);
}

.form-group {
  margin-bottom: 24rpx;
}

/* Transaction Types */
.income {
  color: var(--success-color);
}

.expense {
  color: var(--error-color);
}

/* Flex Utilities */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.flex-1 {
  flex: 1;
}

/* Spacing Utilities */
.mt-2 {
  margin-top: 16rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.ml-2 {
  margin-left: 16rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.p-3 {
  padding: 24rpx;
}

/* Text Utilities */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: 600;
}

.text-small {
  font-size: 24rpx;
}

.text-large {
  font-size: 32rpx;
}
